// Caption: Cards are a convenient means of displaying content composed of different types of objects. Theyâ€™re also well-suited for presenting similar objects whose size or supported actions can vary considerably, like photos with captions of variable length.
mixin card(it)
  .row
    .col.s12.m5
      if it.title
        .card(class="#{it.bgColor}")
          if it.image
            if it.reveal
              .card-image.waves-effect.waves-block.waves-light
                img.activator(src="#{it.image}")
            else
              .card-image
                img(src="#{it.image}")
                span.card-title.white-text= it.title

          .card-content(class="#{it.descriptionColor}-text")
            if it.reveal
              span.card-title.activator.grey-text.text-darken-4= it.title
                i.mdi-navigation-more-vert.right
              each link in it.links
                p
                  a(href='##{link.href}')= link.text

            if !it.image
              - it.titleColor = it.titleColor || 'grey-text text-darken-4'
              span.card-title(class="#{it.titleColor}-text")= it.title

            if !it.reveal
              p= it.description

          if it.links && !it.reveal
            .card-action
              each link in it.links
                a(href='##{link.href}')= link.text

          if it.reveal
            .card-reveal
              span.card-title.grey-text.text-darken-4= it.title
                i.mdi-navigation-close.right
              p= it.description

      else
        .card-panel(class="#{it.bgColor}")
          span(class="#{it.descriptionColor}-text") !{it.description}



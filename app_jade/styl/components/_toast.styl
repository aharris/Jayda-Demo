#toast-container
  display block
  position fixed
  z-index 1001

  +below($small-screen)
    min-width 100%
    bottom 0

  +between($small-screen, $medium-screen)
    min-width 30%
    left 5%
    bottom 7%

  +above($large-screen)
    min-width 8%
    top 10%
    right 7%

.toast
  @extend .z-depth-1
  border-radius 2px
  top 0
  width auto
  clear both
  margin-top 10px
  position relative
  max-width 100%
  height $toast-height
  line-height $toast-height
  background-color $toast-color
  padding 0 25px
  font-size 1.1rem
  font-weight 300
  color $toast-text-color

  flexbox()
  align(center)
  justify-content(space-between)

  .btn, .btn-flat
    margin 0
    margin-left 3rem

  &.rounded
    border-radius 24px

  +below($small-screen)
    width 100%
    border-radius 0

  +between($small-screen, $medium-screen)
    float left

  +above($large-screen)
    float right
